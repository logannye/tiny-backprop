#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

PYTHON_BIN="${PYTHON:-}"
if [[ -z "${PYTHON_BIN}" ]]; then
    if command -v python >/dev/null 2>&1; then
        PYTHON_BIN="python"
    elif command -v python3 >/dev/null 2>&1; then
        PYTHON_BIN="python3"
    else
        echo "Error: unable to locate a python interpreter. Set \$PYTHON or install python." >&2
        exit 127
    fi
fi

exec "${PYTHON_BIN}" "${SCRIPT_DIR}/scripts/run_full_test.py" "$@"

